<div class="header-container">
    <div class="header-logo"><a href="/">Hephillu3d</a></div>
    <% if (session) { %>
        <% if (session.admin_id) { %>
        <div class="header-links-container">
            <a href="/admin">Admin</a><span class="separator">|</span><a href="/account">Account</a><span class="separator">|</span><a href="/api/logout">Logout</a>
        </div>        
        <% } else { %>
            <div class="header-links-container">
                <a href="/account">Account</a><span class="separator">|</span><a href="/api/logout">Logout</a>
            </div>         
        <% } %>    
    <% } else { %>
        <div class="header-links-container">
            <a href="/login">Login</a><span class="separator">|</span><a href="/sign-up">Sign Up</a>
        </div>
    <% } %>    
    <div class="header-cart-container">
        <a href="/cart">
            <object
                class="cart-icon"
                width="30"
                height="30"
                id="cart-icon"
                data="/images/cart.svg"
                type="image/svg+xml"
            ></object>      
            <% if (cartCount > 0) { %>
            <object
                class="cart-amount-icon"
                width="20"
                height="20"
                id="cart-icon"
                data="/images/circle.svg"
                type="image/svg+xml"
            ></object>
            <div class="cart-amount-text"><%= cartCount %></div>
            <% } %>     
        </a>             
    </div>
</div>